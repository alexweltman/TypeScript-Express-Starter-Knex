{
  "name": "typescript-express-starter",
  "version": "0.1.0",
  "description": "A starting point for Node.js express apps with TypeScript",
  "main": "src/server.js",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Express\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "serve": "nodemon bin/www",
    "build-ts": "tsc -p src",
    "watch-ts": "tsc -w -p src",
    "tslint": "tslint -c tslint.json -p src/tsconfig.json",
    "test": "mocha --reporter spec --require test/unit/tsconfig.ts test/unit/**/*.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gongzza/TypeScript-Express-Starter.git"
  },
  "keywords": [
    "typescript",
    "express"
  ],
  "author": "gongzza <gz.us.to@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gongzza/TypeScript-Express-Starter/issues"
  },
  "dependencies": {
    "express": "^4.15.4"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/express": "^4.0.37",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.28",
    "@types/supertest": "^2.0.3",
    "chai": "^4.1.2",
    "concurrently": "^3.5.0",
    "mocha": "^3.5.3",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.5.2"
  }
}
